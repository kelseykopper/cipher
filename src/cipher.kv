#:kivy 2.3.0

# Global behavior for different widget types
<Label>:
  font_name: '../fonts/NotoSans-Light.ttf'
  font_size: 19
  text_size: root.width, None
  color: [0.1607843137254902, 0.1450980392156863, 0.13333333333333333, 1]
  size: self.texture_size
  halign: 'center'

<Popup>:
  size_hint: [0.9, 0.9]
  title: "Open file"
  


<Button>:
  background_normal: ''
  background_color: [0.8392156862745098, 0.6509803921568628, 0.5725490196078431, 1]

<LoadDialog>:
  BoxLayout:
    size: root.size
    pos: root.pos
    orientation: "vertical"

    FileChooserListView:
      id: filechooser

    BoxLayout:
      size_hint_y: None
      height: 30
      Button:
        text: "Cancel"
        on_release: root.cancel()

      Button:
        text: "Open"
        on_release: root.load(filechooser.path, filechooser.selection)

# The actual app
<Cipher>:
  file_display: file_id
  lib_inpt: lib_id
  update_msg: msg_id

  # Represents entire window. 
  # Left box is for UI elements; right box is for file contents display
  BoxLayout:
    canvas.before:
      Color:
        rgba: root.color_palette["beige"]
      Rectangle:
        pos: self.pos
        size: self.size

    orientation: 'horizontal'
    padding: 10

    # This is the left box containing UI items
    BoxLayout:
      orientation: 'vertical' 
      spacing: 15

      Label:
        font_name: '../fonts/NotoSans-Bold.ttf'
        text: 'CIPHER LIBRARY NAME'
        halign: 'left'
        size_hint_y: None

      TextInput:
        id: lib_id
        font_size: 20
        background_color: [0.6392156862745098, 0.5647058823529412, 0.5058823529411764, 1]
        size_hint_y: .5

      Button:
        text: 'locate library'
        on_press: root.get_lib(lib_id.text)

      Label:
        text: 'Searching for preexisting library under this name. If no library is found, a new library will be created.'
        id: msg_id
        height: 60

      Button:
        text: 'open file'
        on_press: root.show_load()

      Label:
        font_name: '../fonts/NotoSans-Bold.ttf'
        text: 'SELECT FILE MODE'
        halign: 'left'
        height: 20
        size_hint_y: None

      BoxLayout:
        size_hint_y: None
        orientation: 'vertical'
        height: 60
        spacing: 0

        ToggleButton:
          text: 'encode'
          group: 'mode'
          on_press: root.set_mode('encode')

        ToggleButton:
          text: 'decode'
          group: 'mode'
          on_press: root.set_mode('decode')

      Button:
        text: 'Convert'
        on_press: root.convert()

    # This is the right box containing file contents
    Label:
      id: file_id
      halign: 'left'
      padding: 10
      text: ''

    # TODO -> add scrollbar 
